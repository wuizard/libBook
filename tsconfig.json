{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": [ "./src/global/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
